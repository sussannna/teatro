{
  "formName":"RegistroUsuarios",
  "method":"POST",
  "action":"/users/users/insert",
  "elements":[
    {
      "name":"name",
      "label":"Nombre",
      "type":"text",
      "validations":{
        "required":false
      },
      "filters":{
        "maxlen":30,
        "minlen":10,
        "striptag":true,
        "stripspace":true,
        "format":"#[A-z]1[ ]#[A-z]"
      }
    },
    {
      "name":"lastname",
      "label":"Apellidos",
      "type":"text",
      "validations":{
        "required":false
      },
      "filters":{
        "maxlen":30,
        "minlen":10,
        "striptag":true,
        "format":"#[A-z]1[ ]#[A-z]"
      }
    },
    {
      "name":"email",
      "label":"Correo Electrónico",
      "type":"email",
      "validations":{
        "required":true,
        "type":"email"
      },
      "filters":{
        "striptag":true
      }
    },
    {
      "name":"bdate",
      "label":"Fecha de nacimiento",
      "type":"date",
      "validations":{
        "required":true
      }
    },
    {
      "name":"gender",
      "label":"Sexo",
      "type":"radio",
      "options":{"Mujer":"w","Hombre":"m","Otros":"o"},
      "default":"o",
      "validations":{
        "required":true,
        "inarray":true
      }
    },
    {
      "name":"transport",
      "label":"Transporte",
      "type":"checkbox",
      "options":{"Coche":"car","Moto":"motorbike","Bicicleta":"bike"},
      "validations":{
        "required":false,
        "inarray":true
      }
    },
    {
      "name":"city",
      "label":"Ciudad",
      "type":"select",
      "options":{"Barcelona":"bcn","Madrid":"mad", "Valencia":"vlc"},
      "default":"bcn",
      "validations":{
        "required":true,
        "inarray":true
      }
    },
    {
      "name":"hobbies",
      "label":"Aficiones",
      "type":"selectmultiple",
      "options":{"Cerveza":"beer","Yoga":"yoga","Deportes":"sports"},
      "validations":{
        "required":false,
        "inarray":true
      }
    },
    {
      "name":"password",
      "label":"Contraseña",
      "type":"password",
      "validations":{
        "required":true,
        "format":"2m-2M-2!-2#",
        "maxlen":30,
        "minlen":8
      }
    },
    {
      "name":"iduser",
      "type":"hidden",
      "validations":{
        "required":true,
        "integer":true
      },
      "default":0
    },
    {
      "name":"description",
      "label":"Comentario",
      "type":"textarea",
      "validations":{
        "required":false
      },
      "filters":{
        "maxlen":30,
        "minlen":10,
        "escapehtml":true,
        "stripspace":true
      }
    },
    {
      "name":"photo",
      "label":"Foto",
      "type":"file",
      "validations":{
        "required":false
      },
      "filters":{
        "maxsize":"300k",
        "extension":["jpg","png"]
      }
    },
    {
      "name":"enviar",
      "label":"Enviar",
      "type":"submit"
    }
  ]
}
